@model IEnumerable<BikeSearchingSite.Models.Model>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<br />

<div class="row">
    <div class="col-6">
        <h2 class="text-info">Models Of Vehicle</h2>
    </div>
    <div class="col-6" style="text-align:right">
        <a class="btn btn-info" asp-action="Create">Add New Model</a>
    </div>
    <br />

    <div class="col-12">
        <table class="table table-striped border">
            <tr class="table-info">
                <th>
                    @Html.DisplayNameFor(m=>m.Make)
                </th>
                <th style="text-align:right">
                    @Html.DisplayNameFor(m=>m.Name)
                </th>
                <th></th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(m=>item.Make.Name)
                    </td>
                    <td style="text-align:right">
                        @Html.DisplayFor(m=>item.Name)
                    </td>
                    <partial name="_TableButtonPartial" model="item.Id" />
                </tr>
            }
        </table>
    </div>
</div>

