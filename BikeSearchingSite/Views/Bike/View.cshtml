@model BikeSearchingSite.Models.ViewModels.BikeViewModel
@using BikeSearchingSite.Extensions
@{
    ViewData["Title"] = "View";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<h2 class="text-info"> View Bike</h2>
<br />
<style>
    .row {
        margin-top: 10px;
    }
</style>


<form>
   
    <div class="form-group row">

        <div class="col-2">
            <label asp-for="Makes"></label>
        </div>
        <div class="col-4">
            <select disabled="disabled" asp-for="Bike.MakeID" asp-items="Model.Makes.ToSelectListItem()" class="form-control" id="Make"></select>
        </div>
       
    </div>

    <div class="form-group row">

        <div class="col-2">
            <label asp-for="Models"></label>
        </div>
        <div class="col-4">
            <select asp-for="Bike.ModelID" disabled="disabled" asp-items="Model.Models.ToSelectListItem()" class="form-control" id="Model"></select>
          
        </div>
    </div>

    <div class="form-group row">

        <div class="col-2">
            <label asp-for="Bike.Year" disabled="disabled"></label>
        </div>
        <div class="col-4">
            <input asp-for="Bike.Year" class="form-control" disabled="disabled" />
         
        </div>
    </div>

    <div class="form-group row">

        <div class="col-2">
            <label asp-for="Bike.Mileage"></label>
        </div>
        <div class="col-4">
            <input asp-for="Bike.Mileage" class="form-control" disabled="disabled" />
        </div>
    </div>

    <div class="form-group row">

        <div class="col-2">
            <label asp-for="Bike.Price"></label>
        </div>
        <div class="col-4">
            <input asp-for="Bike.Price" class="form-control" disabled="disabled" />
         
        </div>

        <div class="col-1">
            <label asp-for="Bike.Currency"></label>
        </div>
        <div class="col-4">
            <select asp-for="Bike.Currency" asp-items="Model.Currencies.ToSelectListItem()" class="form-control" disabled="disabled"></select>
          
        </div>
    </div>

    <div class="form-group row">

        <div class="col-2">
            <label asp-for="Bike.Features"></label>
        </div>
        <div class="col-4">
            <textarea asp-for="Bike.Features" class="form-control" disabled="disabled" ></textarea>
        </div>
    </div>

    <div class="form-group row">

        <div class="col-2">
            <label asp-for="Bike.SellerName"></label>
        </div>
        <div class="col-4">
            <input asp-for="Bike.SellerName" class="form-control" disabled="disabled" />
        </div>
    </div>

    <div class="form-group row">

        <div class="col-2">
            <label asp-for="Bike.SellerEmail"></label>
        </div>
        <div class="col-4">
            <input asp-for="Bike.SellerEmail" class="form-control" disabled="disabled" />
        </div>
    </div>

    <div class="form-group row">

        <div class="col-2">
            <label asp-for="Bike.SellerPhone"></label>
        </div>
        <div class="col-4">
            <input asp-for="Bike.SellerPhone" class="form-control" disabled="disabled" />
        </div>
    </div>

    <br />
    <div class="form-group row">
        <div class="form-group">         
            <a asp-action="Index" class="btn btn-success">Back</a>
        </div>
    </div>
</form>
